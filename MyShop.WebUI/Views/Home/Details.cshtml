@model MyShop.Core.Models.Product

@{
    ViewBag.Title = Model.Name +  " Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <div class="col-md-2">
        <img src="~/Content/ProductImages/@Model.Image" alt="@Model.Name" class="img-responsive img-thumbnail"/>
    </div>
    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt></dt>
            <dd><a href="@Url.Action("AddToBasket","Basket", new { Id = @Model.Id})" class="btn btn-default">Add To Basket</a></dd>

            <dt></dt>
            <dd>@Html.ActionLink("Back to List", "Index")</dd>
            
        </dl>
    </div>

    
</div>
<div class="clearfix"></div>
