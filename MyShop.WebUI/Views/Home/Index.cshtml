@model IEnumerable<MyShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

@foreach (var item in Model)
{
    <div class="col-md-2" style="height:450px;padding:10px;margin:10px;border:solid thin whitesmoke">
        <div class="col-md-12">
            <img src="~/Content/ProductImages/@item.Image" alt="@item.Description" style="width:150px;height:150px;margin-bottom:15px;" class="img-responsive img-thumbnail" />
        </div>
        <div class="col-md-12">
            <strong>@Html.ActionLink(item.Name, "Details", new { Id = item.Id})</strong>
        </div>
        <div class="col-md-12">
            <p>@item.Description</p>
        </div>
        <div class="col-md-12">
            <p>@item.Price</p>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-default">Add to basket</a>
        </div>
    </div>
}

<div class="clearfix" >

</div>